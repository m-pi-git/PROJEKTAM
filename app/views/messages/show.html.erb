<div class="message-container p-3 border border-dark" style="background-color: rgba(255, 255, 255, 0.8);">
  <h1 class="mb-3">Message</h1>

  <div class="message-detail mb-3 border border-dark p-2">
    <p class="mb-0"><strong>Title:</strong> <%= @message.title %></p>
  </div>

  <div class="message-detail mb-3 border border-dark p-2">
    <p class="mb-0"><strong>Sender:</strong> <%= @message.sender.email %></p>
  </div>

  <div class="message-detail mb-3 border border-dark p-2">
    <p class="mb-0"><strong>Body:</strong> <%= @message.body %></p>
  </div>

  <div class="d-flex align-items-center">
    <%= button_to 'Delete', message_path(@message), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger me-2' %>
    <%= link_to 'Back to Messages', messages_path, class: 'btn btn-secondary btn-sm' %>
  </div>
</div>
